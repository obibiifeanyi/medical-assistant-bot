# Medical Assistant Bot Environment Configuration
# Copy this file to .env and update with your values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Docker Configuration
DOCKER_REGISTRY=your-registry-url
IMAGE_TAG=latest

# AWS Configuration for SageMaker
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SageMaker Configuration
SAGEMAKER_EXECUTION_ROLE=arn:aws:iam::your-account:role/SageMakerExecutionRole
SAGEMAKER_INSTANCE_TYPE=ml.t2.medium
SAGEMAKER_INSTANCE_COUNT=1

# Application Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false